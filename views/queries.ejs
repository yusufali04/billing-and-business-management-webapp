<section>
    <div class="queries-main-wrapper">
        <div class="navbar-bg">
            
        </div>
        <div class="queries-wrapper">
            <div class="queries-heading">
                <h1>All Queries</h1>
            </div>
            <% if(queries.length == 0){ %>
                <p style="margin-top: 2rem; font-size: 1.3rem; opacity: 40%;"><em>- No queries found -</em></p>
            <% } %> 

            <% queries.forEach((query)=>{ %>

                <div class="query-wrapper">

                    <div class="query-left">
                        <p>Name</p>
                        <p>Email</p>
                        <p>Phone No</p>
                        <p>Message</p>
                    </div>
                    <div class="query-right">
                        <p>: <%= query.name %> </p>
                        <p>: <%= query.email %></p>
                        <p>: <%= query.phone %></p>
                        <p>: <%= query.message %></p>
                    </div>

                    <div class="delete-query">
                        <form id="<%= query._id %>" action="/delete-query" method="post">
                            <input  type="hidden" name="delete_query" value="<%= query._id %>">   
                        </form>
                        <i class="fa-regular fa-trash-can fa" onclick="document.getElementById('<%= query._id %>2').style.display='block'"></i>
                    </div>


    
                </div>

                <div id="<%= query._id %>2" class="modal">
               
                    <form class="modal-content" action="/action_page.php">
                        <div class="close-div">
                            <span onclick="document.getElementById('<%=query._id%>2').style.display='none'" class="close" title="Close">Ã—</span>
                        </div>
                        
                      <div class="container">
                        <h1>Delete Query</h1>
                        <p class="delete-invoice">(By <%= query.name %>)</p>
                        <p>Are you sure you want to delete this query?</p>
                      
                        <div class="clearfix">
                          <button type="button" onclick="document.getElementById('<%=query._id%>2').style.display='none'" class="cancelbtn delete-popup-btn">Cancel</button>
                          <button type="button" class="deletebtn delete-popup-btn" onclick="document.getElementById('<%= query._id %>').submit()">Delete</button>
                        </div>
                      </div>
                    </form>
                  </div>

            <% }) %> 
            
        </div>
    </div>
</section>